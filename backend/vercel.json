{
  "version": 2,
  "builds": [
    {
      "src": "run.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "5mb",
        "runtime": "python3.9",
        "excludeFiles": [
          "tests/**",
          "**/*.pyc",
          "**/__pycache__/**",
          "**/*.md",
          "**/*.txt",
          "**/*.log",
          ".git/**",
          ".venv/**",
          "env/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/run.py"
    }
  ],
  "functions": {
    "run.py": {
      "memory": 256,
      "maxDuration": 5
    }
  }
}